<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_chitiet"
        android:layout_width="83dp"
        android:layout_height="144dp"
        android:layout_weight="1"
        android:src="@drawable/monman" />

    <LinearLayout
        android:layout_width="188dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_loaimon"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_main2"
                android:layout_width="4dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:src="@drawable/image_1" />

            <TextView
                android:id="@+id/txt_sl_sanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_main3"
                android:layout_width="7dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/sale_image" />

            <TextView
                android:id="@+id/txt_sl_giamgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="94dp"
        android:layout_height="match_parent"
        android:src="@drawable/ew_foreground" />

</LinearLayout>